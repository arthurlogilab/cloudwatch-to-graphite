# sample config.yaml
metrics:
- Namespace: "AWS/ELB"
  MetricName: "RequestCount"
  Statistics: "Sum"
  Unit: "Count"
  Dimensions:
    # you can have multiple dimensions, but boto will only return the last
    LoadBalancerName: "my-load-balancer"
  # Optional custom options
  Options:
    # This is the template used to generate graphite metric names. Here's the
    # default one for reference. You can use the same values you see above. The
    # dimension name, "my-load-balancer", appears in the `dimension` variable.
    # It uses Python %-style formatting.
    Formatter: 'cloudwatch.%(Namespace)s.%(dimension)s.%(MetricName)s.%(statistic)s.%(Unit)s'
- Namespace: "AWS/EC2"
  MetricName: "CPUUtilization"
  # You can have multiple statistics too
  Statistics:
  - "Maximum"
  - "Average"
  Unit: "Percent"
  Dimensions:
    InstanceId: "i-r0b0t"
  Options:
    # EC2 defaults to 5 minute reports
    Period: 5
